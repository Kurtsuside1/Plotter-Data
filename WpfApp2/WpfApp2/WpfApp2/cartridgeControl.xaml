<UserControl x:Class="WpfApp2.cartridgeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" d:DesignWidth="800" Height="40">
    <Grid Background="White">
        <Label Grid.Column="0" x:Name="lblCartridgeNaam" Content="Cartridge naam" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Grid.Column="1" x:Name="lblCatridgeVolume" Content="Volume" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
